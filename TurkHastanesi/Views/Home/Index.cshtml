    }

    .hospital-header {
        position: relative;
        height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .header-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('https://media.istockphoto.com/id/1312706413/tr/foto%C4%9Fraf/modern-hastane-binas%C4%B1.jpg?s=612x612&w=0&k=20&c=T0TEE7l95lQHgxcDWW5MKc9r__QIKO5-xCb3eZq0dMU=');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        opacity: 0.85;
        filter: brightness(0.9);
        z-index: 1;
    }

    .header-content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding: 2rem;
        color: white;
    }

    .header-content h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .header-content p {
        font-size: 1.2rem;
        line-height: 1.6;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    .services-grid {
        padding: 2rem 0;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        padding: 0 2rem;
    }

    .service-card {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .service-card:hover {
        transform: translateY(-5px);
    }

    .service-card .icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .service-card h3 {
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .service-card p {
        color: #666;
        margin-bottom: 1.5rem;
    }

    .contact-section {
        background: white;
        padding: 4rem 2rem;
        border-radius: 10px;
        margin: 3rem 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .gallery-section {
        background: linear-gradient(to bottom, #f8f9fa, #ffffff);
        padding: 4rem 0;
        text-align: center;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        background: transparent;
    }

    .gallery-item {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

    .gallery-item img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .gallery-item:hover img {
        transform: scale(1.1);
    }

    .gallery-item .overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(transparent, rgba(0,0,0,0.7));
        overflow: hidden;
        width: 100%;
        height: 0;
        transition: 0.5s ease;
    }

    .gallery-item:hover .overlay {
        height: 100%;
    }

    .overlay-text {
        color: white;
        font-size: 1rem;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .gallery-item:hover .overlay-text {
        opacity: 1;
    }

    .cta-section {
